<div class="container">
  <div class="card card-body" style="position: relative; top: -180px;">
    <div class="d-flex justify-content-center">
      <span class="my-2 text-danger justify-content-center">*必填欄位</span>
      <form action="/restaurants/{{restaurant._id}}?_method=PUT" method="POST">

        <div class="form-group ">
          <label for="name" class="col-sm-3 col-form-label mt-5">店名＊</label>
          <input type="text" id="name" class="form-control" placeholder="餐廳店名(必填)" name="name"
            value="{{restaurant.name}}" required>
        </div>

        <div class="form-group">
          <label for="name_en" class="col-sm-3 col-form-label">店名(英)</label>
          <input type="text" id="name_en" class="form-control" placeholder="餐廳英文名稱" name="name_en"
            value="{{restaurant.name_en}}">
        </div>

        <div class="form-group">
          <label for="category" class="col-sm-3 col-form-label">類別</label>
          <input type="text" id="category" class="form-control" placeholder="例如: 日本料理" name="category"
            value="{{restaurant.category}}">

        </div>

        <div class="form-group ">
          <label for="image" class="col-sm-3 col-form-label">餐廳圖片</label>
          <input type="text" id="image" class="form-control" placeholder="輸入圖片的網址" name="image"
            value="{{restaurant.image}}">
        </div>

        <div class="form-group ">
          <label for="location" class="col-sm-3 col-form-label">地址</label>
          <input type="text" id="location" class="form-control" placeholder="輸入餐廳地址" name="location"
            value="{{restaurant.location}}">
        </div>

        <div class="form-group">
          <label for="phone" class="col-sm-3 col-form-label">電話</label>
          <input type="text" id="phone" class="form-control" placeholder="輸入手機號碼或市話" name="phone"
            value="{{restaurant.phone}}">
        </div>

        <div class="form-group">
          <label for="google_map" class="col-sm-3 col-form-label">地圖</label>
          <input type="text" id="google_map" class="form-control" placeholder="輸入google地圖網址" name="google_map">
        </div>

        <div class="form-group">
          <label for="rating" class="col-sm-3 col-form-label">評分</label>
          <input type="number" id="rating" class="form-control" step="0.1" min="0" max="5" placeholder="輸入數字"
            name="rating" value="{{restaurant.rating}}">
        </div>

        <div class="form-group">
          <label for="description" class="col-sm-3 col-form-label">簡介</label>
          <textarea class="form-control" id="description" name="description" rows="4" cols="50">
          {{restaurant.description}}
           </textarea>
        </div>

        <button type="submit" class="btn btn-primary">送出</button>
      </form>
    </div>
  </div>
</div>