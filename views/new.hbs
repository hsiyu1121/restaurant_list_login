<div class="container">
  <div class="d-flex justify-content-center">
    <span class="my-2 text-danger justify-content-center">*必填欄位</span>
    <form action="/restaurants" method="POST">
      <div class="form-group row">
        <label for="staticName" class="col-sm-3 col-form-label mt-5">店名＊</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" placeholder="餐廳店名(必填)" name="name" required>
        </div>
      </div>

      <div class="form-group row">
        <label for="staticName" class="col-sm-3 col-form-label">店名(英)</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" placeholder="餐廳英文名稱" name="name_en">
        </div>
      </div>

      <div class="form-group row">
        <label for="staticCategory" class="col-sm-3 col-form-label">類別</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" placeholder="例如: 日本料理" name="category">
        </div>
      </div>

      <div class="form-group row">
        <label for="staticImage" class="col-sm-3 col-form-label">餐廳圖片</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" placeholder="輸入圖片的網址" name="image">
        </div>
      </div>

      <div class="form-group row">
        <label for="staticLocation" class="col-sm-3 col-form-label">地址</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" placeholder="輸入餐廳地址" name="location">
        </div>
      </div>

      <div class="form-group row">
        <label for="staticPhone" class="col-sm-3 col-form-label">電話</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" placeholder="輸入手機號碼或市話" name="phone">
        </div>
      </div>

      <div class="form-group row">
        <label for="staticGoogleMap" class="col-sm-3 col-form-label">地圖</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" placeholder="輸入google地圖網址" name="google_map">
        </div>
      </div>

      <div class="form-group row">
        <label for="staticRating" class="col-sm-3 col-form-label">評分</label>
        <div class="col-sm-10">
          <input type="number" class="form-control" step="0.1" min="0" max="5" placeholder="輸入數字" name="rating">
        </div>
      </div>

      <div class="form-group row">
        <label for="staticDescription" class="col-sm-3 col-form-label">簡介</label>
        <div class="col-sm-10">
          <textarea class="form-control" name="description" rows="4" cols="50">
          </textarea>
        </div>
      </div>
      <button type="submit" class="btn btn-primary">送出</button>
    </form>
  </div>
</div>